<%- model_class = Test -%>
<div class="page-header">
  <h1><%=t '.header' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th class="sort-by-title pointer">
        <%= t(model_class.human_attribute_name(:title)) %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th><%= t(model_class.human_attribute_name(:level)) %></th>
      <th><%= t(model_class.human_attribute_name(:category)) %></th>
      <th><%= t(model_class.human_attribute_name(:questions)) %></th>
      <th><%= t('.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @tests %>
  </tbody>
</table>
