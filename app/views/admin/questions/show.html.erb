<p class=m-3>
  <strong><%= t(Question.human_attribute_name(:body)) %></strong>
  <%= @question.body %>
</p>

<div class='container m-3'>
  <div class="page-header">
    <h3><%= t(Question.human_attribute_name(:answers)) %></h3>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col"><%= t(Answer.human_attribute_name(:body)) %></th>
        <th colspan="3" scope="col" class="text-center"><%= t('admin.answers.index.actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @question.answers %>
    </tbody> 
  </table>
</div>
<p>
  <%= link_to t('admin.answers.index.new'), new_admin_question_answer_path(@question), class: 'btn btn-success m-3' %>
</p>
<p>
  <%= link_to t('.edit'), edit_admin_question_path(@question) , class: 'btn btn-success m-3' %>  
  <%= link_to t('.back'), admin_test_path(@question.test), class: 'btn btn-primary' %>
</p>
