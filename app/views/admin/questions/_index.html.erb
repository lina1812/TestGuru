<div class="page-header mt-3">
  <h2><%= t('.header') %></h2>
</div>
<div class='container m-3'>
  <table class="table">
    <thead>
      <tr>
        <th scope="col"><%= t(Question.human_attribute_name(:body)) %></th>
        <th colspan="3" scope="col" class="text-center"><%= t('.actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'admin/questions/question', collection: @questions %>
    </tbody> 
  </table>
</div>
<p> 
  <%= link_to t('.new'), new_admin_test_question_path(@test, @question), class: 'btn btn-primary' %>
</p>
