<div class="page-header m-3">
  <h1><%=t '.header' %></h1>
</div>

<%= render 'shared/errors', resource: @test %>

<table class="table table-striped m-3">
  <thead>
    <tr>
      <th class="sort-by-title pointer">
        <%= t(Test.human_attribute_name(:title)) %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th><%= t(Test.human_attribute_name(:level)) %></th>
      <th><%= t(Test.human_attribute_name(:category)) %></th>
      <th><%= t(Test.human_attribute_name(:questions)) %></th>
      <th><%= t(Test.human_attribute_name(:timer)) %></th>
      <th colspan="3" scope="col" class="text-center"><%= t('.actions') %></th>
    </tr>
  </thead>
  <tbody >
    <%= render @tests %>
  </tbody>
</table>
<p>
  <%= link_to t('.new'), new_admin_test_path(@test), :class => 'btn btn-primary m-3' %>
</p>
