<tr>
  <td class="align-middle">
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td class="align-middle"><%= test.level %></td>
  <td class="align-middle"><%= test.category.title %></td>
  <td class="align-middle"><%= test.questions.size %></td>
  <td class="align-middle">
    <%= link_to t('helpers.links.actions.show'), admin_test_path(test), :class => 'btn btn-primary' %>
  </td>
  <td class="align-middle">
    <%= link_to t('helpers.links.actions.edit'),
                edit_admin_test_path(test), 
                data: { test_id: test.id },
                class: 'btn btn-success form-inline-link'  %>
    </td>
  
  <td class="align-middle">
    <%= link_to t('helpers.links.actions.delete'),
     admin_test_path(test),
     method: :delete,
     data: { confirm: t('helpers.links.actions.confirm')}, :class => 'btn btn-danger'  %>
  </td>
</tr>
