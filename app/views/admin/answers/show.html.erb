<div class="page-header m-3">
  <h2><%= t(Question.model_name.human) %></h2>
</div>
<div class='container m-3'>
  <p>
    <%= @answer.question.body %>
  </p>

  <p>
    <b><%= t(Answer.model_name.human) %>:</b>
    <%= @answer.body %>
  </p>

  <p>
    <b><%= t(Answer.human_attribute_name(:correct)) %>:</b>
    <%= @answer.correct %>
  </p>

  <%= link_to t('admin.answers.show.back'), admin_question_path(@answer.question), class: 'btn btn-primary' %>
</div>
