<tr>
  <td><%= badge.title %></td>
  <td><%= image_tag(badge.image) %></td>
  <td>
    <%= t("admin.badges.types.#{badge.type}") %>
    <% if badge.category %>
      <%= badge.category&.title %>
    <% end %>
    <% if badge.test_level %>
     <%= badge.test_level %>
    <% end %>
  </td>
  <td><%= link_to t('helpers.links.actions.show'), admin_badge_path(badge), :class => 'btn btn-primary' %></td>
  <td><%= link_to t('helpers.links.actions.edit'), edit_admin_badge_path(badge),:class => 'btn btn-success' %></td>
  <td>
    <%= link_to t('helpers.links.actions.delete'),
     admin_badge_path(badge),
     method: :delete,
     data: { confirm: t('helpers.links.actions.confirm') }, 
     :class => 'btn btn-danger' %>
  </td>
</tr>
